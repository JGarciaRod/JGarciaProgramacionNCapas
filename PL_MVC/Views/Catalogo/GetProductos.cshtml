@model ML.Producto
@{
    ViewBag.Title = "Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>
<link href="~/Content/Styles/Productos.css" rel="stylesheet" />

<div class="row">
    @foreach (ML.Producto producto in Model.Productos)
    { 
        <div class="col-md-3 col-sm-6">
            <div class="product-grid">
                <div class="product-image">
                    <a href="#" class="image">

                        @if (producto.Imagen == "" || producto.Imagen == null)
                        {
                            <img class="pic-1" 
                                 src="https://i0.wp.com/get.witei.com/wp-content/uploads/2022/04/cartera-de-productos-ejemplos.jpg?fit=1200%2C675&ssl=1"
                                 >
                        }
                        else
                        {
                            <img class="pic-1" src="data:image/*;base64,@producto.Imagen"
                                 >
                        }

                    </a>
                    <span class="product-hot-label">hot</span>
                    <ul class="product-links">
                        <li><a href="#"><i class="fas fa-heart"></i></a></li>
                        <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="#">@producto.Nombre</a></h3>
                    <div class="price">@producto.Descripcion</div>
                    <div class="price">@producto.PrecioUnitario</div>
                    @*<ul class="rating">
                        <li class="fas fa-star"></li>
                        <li class="fas fa-star"></li>
                        <li class="fas fa-star"></li>
                        <li class="fas fa-star"></li>
                        <li class="far fa-star"></li>
                    </ul>*@
                </div>
            </div>
        </div>
    }
</div>